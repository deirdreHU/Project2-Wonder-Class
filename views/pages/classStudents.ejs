<%- include('../partials/header')%>
<link href="/css/teacherHome.css" rel="stylesheet" />
<body>
<%- include('../partials/homeHeaderBar')%>
<div class="container wrapper">
    <div class="row">
        <div class="col-2">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="/home" class="nav-link">
                        <i class="bi bi-arrow-left"></i>
                        Back
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/class/<%=classID%>/students">Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/class/<%=classID%>/stories">Stories</a>
                </li>
            </ul>
        </div>
        <div class="col-10">
            <div>
                <a href="/class/<%=classID%>/students/add" class="btn btn-primary">Add <i class="bi bi-plus"></i></a>
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Student Name</th>
                    <th scope="col">Student Email</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                <% students.forEach(function(student, index) {%>
                    <tr>
                        <th scope="row"><%= (index + 1)%></th>
                        <td><%=student.name%></td>
                        <td><%=student.email%></td>
                        <td>
                            <a href="/class/<%=classID%>/students/<%=student._id%>/delete" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                    </tr>
                <%}) %>
                </tbody>
            </table>
            
        </div>
    </div>
</div>
</body>