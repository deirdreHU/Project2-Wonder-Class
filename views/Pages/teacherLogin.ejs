<%- include('../partials/header')%>

<link href="/css/login.css" rel="stylesheet" />

<body>
    <%- include('../partials/headerBar')%>

    <div class="container">

        <form class="wrapper" action="/users/login" method="post">

            <div class="row h-100">
                <div class="col-6 tipWrapper">
                    <h3>Welcome Back!</h3>
                    <div class="text-center mt-5">
                        <img src="/images/login.png" width="80%"/>
                    </div>
                </div>

                <div class="col-6 formWrapper">
                    <h2 class="mt-2">Log in</h2>
                    <div class="mb-3 mt-3">
                        <label class="form-label text-secondary">Username</label>
                        <input name="name" required class="form-control" type="name" placeholder="Enter your username" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Password</label>
                        <input name="password" required class="form-control" type="password" placeholder="Enter your password" />
                        <a href="/users/resetpassword" class="btn btn-link fs-8 ps-0">Forget Password</a>
                    </div>
                        <div class="text-end">
                            <a href="/users/register" class="btn btn-link">Sign Up</a>
                            <button class="btn btn-primary">Login</button>
                        </div>
                    
                </div>

            </div>

        </form>

    </div>

</body>