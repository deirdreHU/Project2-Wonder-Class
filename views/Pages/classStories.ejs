<%- include('../partials/header')%>
<link href="/css/teacherHome.css" rel="stylesheet" />
<body>
<%- include('../partials/homeHeaderBar')%>
<div class="container wrapper">
    <div class="row">
        <div class="col-2">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="bi bi-arrow-left"></i>
                        Back
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/class/<%=classID%>/students">Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/class/<%=classID%>/stories">Stories</a>
                </li>
            </ul>
        </div>
        <div class="col-10">
            <a class="btn btn-primary" href="/class/<%=classID%>/stories/add">Add +</a>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Story Title</th>
                </tr>
                </thead>
                <tbody>
                <% stories.forEach(function(story, index) {%>
                    <tr>
                        <th scope="row"><%= (index + 1)%></th>
                        <td><%=story.title%></td>
                    </tr>
                <%}) %>

                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
